# platform :ios, '9.0'

target 'Burgers' do
  use_frameworks!


  # Rx
  pod 'RxSwift'
  pod 'RxCocoa'

  # UI
  pod 'SnapKit'

  # Networking
  pod 'Kingfisher'

  # Logging
  pod 'CocoaLumberjack/Swift'

  # SDK
  pod 'Fabric'
  pod 'Crashlytics'
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  pod 'Firebase/Storage'
  pod 'Firebase/RemoteConfig'
  pod 'FBSDKLoginKit'   

  # Misc.
  pod 'ReusableKit'
  pod 'Then'

  target 'BurgersTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
